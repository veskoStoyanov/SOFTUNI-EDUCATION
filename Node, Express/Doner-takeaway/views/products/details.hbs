<h1>Order details</h1>
<div class="catalog">
    <div class="column">
        <img src={{doner.imageUrl}}>
    </div>
    <div class="column">
        <h2>{{doner.category}} doner, {{doner.size}}cm</h2>
        <h3>From {{order.creationDate}}</h3>
        <div class="toppings">
            {{#each order.toppings}}
            {{this}}<br>
            {{/each}}        
        </div>
    </div>
    <div class="status">
        <div class="status-block">
            <span class="progress-right"></span>
            <span class="checkpoint {{#if inPending}}current{{/if}}"></span><br>
            Pending
        </div>
        <div class="status-block">
            <span class="progress-left"></span>
            <span class="progress-right"></span>
            <span class="checkpoint {{#if inProgres}}current{{/if}}"></span><br>
            In progress
        </div>
        <div class="status-block">
            <span class="progress-left"></span>
            <span class="progress-right"></span>
            <span class="checkpoint {{#if inTransit}}current{{/if}}"></span><br>
            In transit
        </div>
        <div class="status-block">
            <span class="progress-left"></span>
            <span class="checkpoint {{#if inDelivery}}current{{/if}}"></span><br>
            Delivered
        </div>
    </div>
</div>