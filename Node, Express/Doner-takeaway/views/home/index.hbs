<h1>Welcome to Doner Place!</h1>
<p>We offer a wide variety of tasty doner kebab, cutosmized to your liking. Choose from different sizes of chicken, beef
    and lamb and any topping you want. Place your order now!</p>
<div class="products">
    {{#if isAdmin}}
    <h2>Admin</h2>
    <div class="product-card">
        <img src="img/new.png">
        <a href="/product/create" class="button product-title">Create Product</a>
    </div>
    {{/if}}
    <h2>Chicken Doner</h2>
    {{#each chikens}}
    <div class="product-card">
        <img src={{imageUrl}}>
        {{#if ../isAdmin}}
      <a href="/order/edit" class="control"><img class="control-img" src="img/edit.png"></a>
        <a href="/product/delete/{{_id}}" class="control"><img class="control-img" src="img/delete.png"></a>
         {{/if}}
        {{#if ../currentUser}}
        <a href="/product/order/{{_id}}" class="button product-title">Order</a>
        {{/if}}
       
    </div>
    {{/each}}
    <h2>Beef Doner</h2>
    {{#each beefs}}
    <div class="product-card">
        <img src={{imageUrl}}>
        {{#if ../isAdmin}}
        <a href="/order/edit" class="control"><img class="control-img" src="img/edit.png"></a>
        <a href="/product/delete/{{_id}}" type="submit" class="control"><img class="control-img" src="img/delete.png"></a>
        
         {{/if}}
        {{#if ../currentUser}}
        <a href="/product/order/{{_id}}" class="button product-title">Order</a>
        {{/if}}
    </div>
    {{/each}}
    <h2>Lamb Doner</h2>
    {{#each lambs}}
    <div class="product-card">
        <img src={{imageUrl}}>
       {{#if ../isAdmin}}
        <a href="/order/edit" class="control"><img class="control-img" src="img/edit.png"></a>
        <a href="/product/delete/{{_id}}" class="control"><img class="control-img" src="img/delete.png"></a>
         {{/if}}
        {{#if ../currentUser}}
        <a href="/product/order/{{_id}}" class="button product-title">Order</a>
        {{/if}}
    </div>
    {{/each}}
</div>
