<h1>Welcome to SoftUni Wiki!</h1>
<section>
    <h2>Edit article
        <div class="controls">
            {{#if isAdmin}}
            {{#if isLocked}}
            <a href="/article/unlock/{{_id}}">Unlock article</a>
            {{else}}
            <a href="/article/lock/{{_id}}">Lock article</a>
            {{/if}}
            {{/if}}
        </div>
    </h2>
    <div class="spacer">
        <form action="/edit/article/{{_id}}" method="POST">
            <label>Article title</label>
            <h3 name="title">{{title}}</h3>
            <label>Content</label>
            <textarea name="content">{{content}}</textarea>
            <input type="submit" value="Submit">
        </form>
    </div>
</section>