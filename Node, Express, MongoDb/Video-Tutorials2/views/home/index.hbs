{{#if currentUser}}
<h1 class="text-center">Courses</h1>
<section>
    <a href="/create" class="btn btn-warning ">Create Course</a>
    <form action="/search"  class="search float-right">
        <label>Search: </label>
        <input name="name" type="text">
        <input type="submit" class="btn btn-info" value="Search">
    </form>
</section>

<div class="container mt-3">
    <div class="row ">
        <div class="card-deck d-flex justify-content-center">
            {{#each loginUsers}}
            <div class="card mb-4">
                <img class="card-img-top"
                    src={{this.image}}
                    alt="Card image cap" width="400">
                <div class="card-body">
                    <h4 class="card-title">{{this.title}}</h4>
                </div>
                <div class="card-footer">
                    <a href="/details/{{this._id}}"><button type="button" class="btn btn-info">Details</button></a>
                    <small class="float-right">{{this.createdAt}}</small>
                </div>
            </div>
            {{else}}
            <h3 class="text-center">No courses...</h3>
            {{/each}}

        </div>
    </div>
</div>

{{else}}
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Video Tutorials</h1>
        <p class="lead">Start Self-Study Today: It'll Change Your Life</p>
    </div>
</div>

<div>
    <h1 class="text-center">Top Courses</h1>
    <div class="container mt-3">
        <div class="row d-flex justify-content-center">

            <div class="card-deck">
                {{#each logoutUsers}}
                <div class="card mb-4">
                    <img class="card-img-top" src={{this.image}} alt="Card image cap" width="400">
                    <div class="card-body">
                        <h4 class="card-title">{{this.title}}</h4>
                    </div>
                </div>
                {{else}}
               <h3 class="text-center">No courses...</h3>
                {{/each}}
            </div>

        </div>


    </div>
</div>
{{/if}}